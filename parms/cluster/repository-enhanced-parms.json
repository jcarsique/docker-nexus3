{
	"repositories": {
		"maven2": {
			"hosted": {
				"maven-public": {
					"blobstore": {
						"name": "store"
					},
					"version_policy": "MIXED"
				},
				"maven-private": {
					"blobstore": {
						"name": "store"
					},
					"version_policy": "MIXED"
				}
			},
			"proxy": {
				"maven-upstream": {
					"blobstore": {
						"name": "store",
						"strict_content_type_validation": "true"
					},
					"remote": {
						"url": "https://packages.nuxeo.com/repository/maven-internal/"
					},
					"version_policy": "MIXED"
				}
			},
			"group": {
				"maven": {
					"blobstore": {
						"name": "store"
					},
					"repositories": [
						"maven-public",
						"maven-private",
						"maven-upstream"
					]
				}
			}
		}
	},
	"passwords": {
		"file": [
			"/opt/sonatype/nexus/config/passwords.json"
		]
	},
	"remotes": {
		"packages.nuxeo.com": {
			"auth_type": "username",
			"user": "deployment"
		}
	}
}
